<div class="row">
	<div class="span4">
		
		<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }, html: { class: "well" })		 do |f| %>
		  <%= devise_error_messages! %>
		  <fieldset>
			<legend>Forgot your password?</legend>
			<%= f.input :email %>
		
		  <div><%= f.button :submit, "Send me reset password instructions" %></div>
		<% end %>
			</fieldset>
		<%= render "devise/shared/links" %>
	</div>
	<div class="span8">
		<h2>Reseting your password has never been easier</h2>
	</div>
</div>
